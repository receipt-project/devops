start-server: prepare-server-directories ## Run server with all required directories
	docker-compose up -d teamcity-server

stop-server: ## Stop server
	docker-compose stop teamcity-server

prepare-server-directories:
	mkdir -p /receipt/teamcity/data
	mkdir -p /var/log/teamcity

.DEFAULT_GOAL := help
help: ## Autogenerated help reference for make
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'
.PHONY: *
